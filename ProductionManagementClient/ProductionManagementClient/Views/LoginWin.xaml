<Window x:Class="ProductionManagementClient.Views.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductionManagementClient.Views"
        mc:Ignorable="d"
        Title="Авторизация" Height="213" Width="346"
        ResizeMode="NoResize">
    <Grid>
        <TextBox Text="{Binding User.Login}"  HorizontalAlignment="Left" Margin="61,37,0,0" TextWrapping="Wrap" Width="205" Height="21" VerticalAlignment="Top"/>
        <TextBox Text="{Binding User.Password}" HorizontalAlignment="Left" Margin="61,70,0,0" VerticalAlignment="Top" Width="205" Height="21"/>
        <Button Name="EnterButton" Command="{Binding LoginCommand}" Content="Войти" Margin="61,106,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" Height="27"/>

    </Grid>
</Window>
