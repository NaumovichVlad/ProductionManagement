<Window x:Class="ProductionManagementClient.Views.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductionManagementClient.Views"
        mc:Ignorable="d"
        Title="Авторизация" Height="213" Width="346"
        ResizeMode="NoResize">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="61,37,0,0" TextWrapping="Wrap" Text="Имя пользователя" Width="205" Height="21" VerticalAlignment="Top"/>
        <PasswordBox Password="Пароль" HorizontalAlignment="Left" Margin="61,70,0,0" VerticalAlignment="Top" Width="205" Height="21"/>
        <Button Name="EnterButton" Content="Войти" Margin="61,106,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" Height="27" Click="EnterButton_Click"/>
        <Button x:Name="EnterButton_Copy" Content="Войти" Margin="61,106,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" Height="27" Click="EnterButton_Click"/>

    </Grid>
</Window>
