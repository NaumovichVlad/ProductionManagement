<Window x:Class="ProductionManagementClient.Views.Menus.AdminMainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductionManagementClient.Views.Menus" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="AdminMainWin" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,577,0">
            <TreeView Name="MainTreeView">
                <TreeViewItem Header="Таблицы">
                    <TreeViewItem Name="Users" Header="Пользователи" />
                    <TreeViewItem Name="Roles" Header="Роли" />
                    <TreeViewItem Name="Employees" Header="Сотрудники" />
                </TreeViewItem>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectedItemChanged">
                        <i:InvokeCommandAction 
                         Command="{Binding SelectItemCommand}"
                         CommandParameter="{Binding SelectedItem, ElementName=MainTreeView}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TreeView>
        </Grid>
        <Grid Margin="223,0,0,0">
            <DataGrid ItemsSource="{Binding Table}" AutoGenerateColumns="True"  Margin="22,145,31,28"/>
        </Grid>
    </Grid>
</Window>
